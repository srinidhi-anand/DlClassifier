{
    "version": 2,
    "builds": [
      {
        "src": "backend/main.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb"
        }
      },
      {
        "src": "frontend",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ],
    "rewrites": [
        {
            "source": "/backend/(.*)",
            "destination": "/backend/main.py"
        },
        {
          "source": "/(.*)",
          "destination": "/index.html"
        }
    ]
  }