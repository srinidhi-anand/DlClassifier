{
    "devCommand": "uvicorn backend.app:app --host 0.0.0.0 --port 8000 && npm install --prefix frontend && npm run build --prefix frontend",
    "version": 2,
    "builds": [
      {
        "src": "backend/app.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb"
        }
      },
      {
        "src": "frontend",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/app.py"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/build/index.html"
      }
    ]
  }