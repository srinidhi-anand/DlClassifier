{
    "version": 2,
    "builds": [
      {
        "src": "api/main.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb"
        }
      },
      {
        "src": "app/index.html",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/main.py"
        },
        {
          "source": "/(.*)",
          "destination": "/app/index.html"
        }
    ]
  }